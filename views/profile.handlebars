<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Create a New Article:</h3>

    <form class='form new-article-form'>
      <div class='form-group'>
        <label for='article-name'>Article name:</label>
        <input
          class='form-input'
          type='text'
          id='article-name'
          name='article-name'
        />
      </div>
      <div class='form-group'>
        <label for='article-cont'>Content:</label>
        <textarea
          class='form-input'
          id='article-cont'
          name='article-cont'
        ></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  {{#if articles.length}}
    <div class='col-md-6 article-list'>
      <h3>Current articles:</h3>
      <br>
      <table class="table">
      <thead>
        <tr>
          <th scope="col">Article Id:</th>
          <th scope="col">Article Name:</th>
          <th scope="col">Delete:</th>
        </tr>
      </thead>
        <tbody>

          {{#each articles as |article|}}
          <tr>
          <th scope="row">{{article.id}}</th>
          <td><h4><a href='/article/{{article.id}}'>{{article.name}}</a></h4></td>
          <td><button
              class='btn btn-sm btn-danger'
              data-id='{{article.id}}'
            >DELETE</button></td>
          </tr>
            {{/each}}

        </tbody>
      </table>
       {{/if}}
    </div>
<script src='./js/profile.js'></script>